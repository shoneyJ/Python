{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}",
            "args": [
                "main:app", 
                "--host","127.0.0.1",
                "--port","8080",
                "--reload",
                "--log-level",
                "debug",
                "--use-colors"
            ],
            "jinja": true
        }
    ]
}